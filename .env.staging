# ==============================================
# DataZone Energy - STAGING Environment
# ==============================================

# Ambiente
ENVIRONMENT=staging
DEBUG=False

# PostgreSQL / PostGIS (Railway fornece automaticamente)
DATABASE_URL=${DATABASE_URL}
ASYNC_DATABASE_URL=${DATABASE_URL}

# API Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME=DataZone Energy API (Staging)
VERSION=1.0.0

# CORS (apenas frontend staging)
BACKEND_CORS_ORIGINS=["https://staging-datazone.vercel.app"]

# Seguran√ßa (Railway gera automaticamente)
SECRET_KEY=${SECRET_KEY}
ACCESS_TOKEN_EXPIRE_MINUTES=30

# GIS Settings
DEFAULT_CRS=EPSG:4326
SIMPLIFY_TOLERANCE=0.001

# Performance
MAX_CONNECTIONS_POOL=30
CACHE_TTL=300

# Logging (INFO em staging)
LOG_LEVEL=INFO
SQL_LOGGING=False

# Monitoramento
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=staging
