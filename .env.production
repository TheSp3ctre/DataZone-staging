# ==============================================
# DataZone Energy - PRODUCTION Environment
# ==============================================

# Ambiente
ENVIRONMENT=production
DEBUG=False

# PostgreSQL / PostGIS (Railway fornece automaticamente)
DATABASE_URL=${DATABASE_URL}
ASYNC_DATABASE_URL=${DATABASE_URL}

# API Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME=DataZone Energy API
VERSION=1.0.0

# CORS (apenas domínio de produção)
BACKEND_CORS_ORIGINS=["https://datazone.com","https://www.datazone.com"]

# Segurança (Railway gera automaticamente)
SECRET_KEY=${SECRET_KEY}
ACCESS_TOKEN_EXPIRE_MINUTES=15

# GIS Settings
DEFAULT_CRS=EPSG:4326
SIMPLIFY_TOLERANCE=0.001

# Performance (otimizado para produção)
MAX_CONNECTIONS_POOL=50
CACHE_TTL=600

# Logging (WARNING em produção - apenas erros)
LOG_LEVEL=WARNING
SQL_LOGGING=False

# Monitoramento
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
