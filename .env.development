# API Settings
API_PORT=8000
API_V1_PREFIX=/api/v1
PROJECT_NAME=DataZone Energy API
VERSION=1.0.0

# CORS (permissivo em dev)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8000"]

